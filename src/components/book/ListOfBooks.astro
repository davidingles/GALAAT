---
import BookItem from './BookItem.astro';
import { books } from '../../data/books.js';
---

<ul class="grid sm:grid-cols-2 md:grid-cols-4 gap-8 p-12 place-items-center m-auto">
        {
            books.map((book) => {
                return (
                    <button class="card aspect-square">
                        <BookItem id={book.id} title={book.title} img={book.img} three={book.three} />
                    </button>
                )
            })
        }
</ul>


<style>
    .card {
        border: solid 1px #fff;
        width: 254px;
        height: 254px;
        border-radius: 30px;
        background: #e0e0e0;
        box-shadow: 15px 15px 30px #bebebe,
                   -15px -15px 30px #ffffff;
      }
      .card:hover{
        transition: all 0.3s ease-in-out;
        transform: translateY(-5px);
        filter: brightness(1.05);
        box-shadow: 3px 3px 5px #bebebe,
                   -3px -15px 5px #ffffff;
      }
</style>