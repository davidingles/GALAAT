--- 
import Footer from '../components/footer/Footer.astro';
import Header from '../components/header/Header.astro';
import '../global.css';
interface Props {
	title?: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description">
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/svg/favicon2-01.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<div>
			<Header />
		</div>
		<slot />
		<div class="border-8 flex justify-center items-center h-[22rem] bg-[#202020] text-[#f2f2f2]">
			<Footer />
		</div>
	</body>
</html>

