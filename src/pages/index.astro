---
import Header from '../components/header/Header.astro'
import Layout from '../layouts/Layout.astro'
import Footer from '../components/footer/Footer.astro'
import Carrusel from '../components/carrusel/Carrusel.astro'
import Modal from '../components/footer/Modal.astro';
import SeccionContactos from '../components/secciones/SeccionContactos.astro';
import SeccionVideos from '../components/secciones/SeccionVideos.astro';
import SeccionLogo from '../components/secciones/SeccionLogo.astro';

const title = 'Auxiliar Manipuladora del Cart√≥n'
---

<Layout title={title}>

	<div class="relative flex flex-col h-max-screen w-max-screen">
		<div class="fixed w-full z-20 top-0">
			<Header />
		</div>
<!-- //BODY =================================================================================================		 -->
		<main class="flex flex-col max-w-[80%] m-auto">

<!-- // SECCION 1 LOGO Y TEXTO ==================================================== -->
				<div class="logo flex justify-center items-center py-8 h-screen">
					<SeccionLogo />
				</div>

				<!-- //ANIMACION PARA EL UNDERLINE DEL NAVBAR ================================================================================================= -->
				<style>


					.logo {
						animation-name: fadeDown;
						animation-duration: 1s;
						animation-fill-mode: both;
						animation-delay: .3s;
					}

					@keyframes fadeDown {
						from {
							opacity: 0;
							transform: translate3d(0, -100%, 0);
						}
						to{
							opacity: 1;
							transform: translate3d(0, 0, 0);
						}

					}
					
					.fadeDown {
						animation-name: fadeDown;
					}


				</style>
		
<!-- // SECCIOn2 CARRUSELL ==================================================== -->
			<div id="nave" class="min-h-screen flex justify-center items-center">
				<div class="h-[44%] flex flex-row ">
					<Carrusel />
				</div>
			</div>

<!-- // SECCION CONTACTOS ====================================================  -->
				<div id="contacto" class= "relative ">
					<SeccionContactos />
				</div>

<!-- // SECCION CAMION ==================================================== -->
				<div id="camion" class=" relative flex flex-col justify-center">
					<SeccionVideos />
				</div>

		</main>
<!-- //FOOTER =====================================================		 -->
		<div class="relative flex justify-center items-center h-[22rem] bg-[#303030] text-[#808080]">
			<Footer />
		</div>
			<Modal />
		</div>

</Layout>

<style>
	:global(.light) .camion{
		color: #202020;
	}
	.tipo {
		color: var(--auxiliar1);
	}
	:global(.light) .tipo {
		color: var(--auxiliar2);
	}
</style>



<!-- // TEMA OSCURO ==================================================================================================  -->
<style>
	:global(.light) .david{
		color: black;
	}
</style>

<!-- //TIPOGRAFIA ================================================================================================== -->
<style>
	.tipografia{
	font-family: Helvetica, Arial, sans-serif;
	}

</style>